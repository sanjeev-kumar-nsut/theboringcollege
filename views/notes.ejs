                    <div class="card" style="width: 18rem; height: 10 rem;">
                        <img src="..." class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%=note.name%></h5>
                          <a href="http://localhost:3000/<%= note.path %>" class="btn btn-primary">DOWNLOAD</a>
